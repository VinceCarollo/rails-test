<%= form_for([@list, @task]) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name, class: 'form-label' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field form-group">
    <%= f.label :due_date, class: 'form-label' %><br />
    <%= f.text_field :due_date, type: 'date' %>
  </div>
  <div class="field form-group">
    <%= f.label :complete, "Complete?", class: 'form-label' %>
    <%= f.check_box :complete %>
  </div>
  <div class="actions">
    <%= f.submit "Submit Task", class: 'btn btn-dark' , id: 'edit-list-btn'%>
  </div>
<% end %>
