<h1>List Tasks</h1>
<%= link_to 'Sort By Due Date', list_tasks_path(@tasks.first.list, sort: 'due_date')%>
<table>
  <tr>
    <th>Name</th>
    <th>Complete?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td class='task-name'><%= task.name %></td>
      <td><%= task.complete %></td>
      <% if task.due_date %>
        <td><%= task.due_date.strftime('%F') %></td>
      <% end %>
      <td><%= link_to 'Show', list_task_path(@list, task) %></td>
      <td><%= link_to 'Edit', edit_list_task_path(@list, task) %></td>
      <td><%= link_to 'Destroy', list_task_path(@list, task), method: :delete, confirm: 'Are you sure?' %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'Back', lists_path %> |
<%= link_to 'New Task', new_list_task_path(@list) %>
